{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "target": "es2016",
    "types": ["vitest/globals", "node"],
    "paths": {
      "~/tests/*": ["./tests/*"],
      "@invertase/firebaseui-core": ["../core/src/index.ts"],
      "@invertase/firebaseui-styles": ["../styles/src/index.ts"]
    }
  },
  "files": ["setup-test.ts"],
  "include": ["tests/**/*.spec.ts", "tests/**/*.d.ts", "setup-test.ts"]
}
