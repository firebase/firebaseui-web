{
  "emulators": {
    "auth": {
      "port": 9099
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "hosting": [
    {
      "site": "fir-ui-shadcn-registry",
      "public": "packages/shadcn/public"
    },
    {
      "site": "fir-ui-shadcn",
      "public": "examples/shadcn/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
