{
  "name": "angular-example",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:lib": "ng build firebaseui-angular",
    "build:local": "pnpm run build:lib && cd projects/firebaseui-angular && pnpm pack",
    "watch": "ng build --watch --configuration development",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --exclude=\"**/integration/**\"",
    "test:integration": "vitest run --include=\"**/tests/integration/**/*.spec.ts\"",
    "test:ci": "vitest run --coverage",
    "serve:ssr:angular-ssr": "node dist/angular-ssr/server/server.mjs",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,html,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,css,scss}\"",
    "deploy": "pnpm run build && firebase deploy --only hosting:fir-ui-rework-angular"
  },
  "dependencies": {
    "@angular/animations": "^20.2.2",
    "@angular/common": "^20.2.2",
    "@angular/compiler": "^20.3.16",
    "@angular/core": "^20.2.2",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "^20.2.2",
    "@angular/platform-browser": "^20.2.2",
    "@angular/platform-browser-dynamic": "^20.2.2",
    "@angular/platform-server": "^20.2.2",
    "@angular/router": "^20.2.2",
    "@angular/ssr": "^20.2.2",
    "@firebase-oss/ui-angular": "workspace:*",
    "@firebase-oss/ui-core": "workspace:*",
    "@firebase-oss/ui-styles": "workspace:*",
    "@firebase-oss/ui-translations": "workspace:*",
    "@tailwindcss/postcss": "^4.0.6",
    "express": "^4.18.2",
    "postcss": "^8.5.2",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.0.6",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "latest",
    "@angular-devkit/core": "latest",
    "@angular-devkit/architect": "latest",
    "@angular/cli": "^20.2.2",
    "@angular/compiler-cli": "^20.2.2",
    "@eslint/js": "^9.22.0",
    "@tanstack/angular-form": "^0.42.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.19.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^9.1.0",
    "firebase": "^11",
    "jsonc-parser": "^3.2.0",
    "vite": "^6.2.2",
    "vitest": "^3.2.0",
    "@vitest/ui": "^3.2.0",
    "@vitest/coverage-v8": "^3.2.0",
    "jsdom": "^25.0.0",
    "@testing-library/jest-dom": "^6.6.0",
    "nanostores": "^0.11.3",
    "ng-packagr": "^20.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.9.2"
  }
}
